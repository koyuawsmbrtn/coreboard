generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id            String   @id @default(cuid())
  ticketNumber  String   @unique @default(cuid()) // Non-guessable ticket number
  linearId      String?  @unique // Linear issue ID
  userId        String?  // External user ID from better-auth (no foreign key)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([ticketNumber])
  @@map("tickets")
}
